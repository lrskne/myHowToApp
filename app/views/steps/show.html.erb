<div id='step'>
  <h2><%= @step.title %></h2>
  <%# look up simple_format details later lbelater %>
  <%= simple_format(@step.description) %>
  <%= link_to "Edit Step", [:edit, @how, @step] %>
  <%= link_to "Delete Step", [@how, @step], :method => :delete,
  :confirm => "Are you sure you want to delete this step?" %>
  <%# lbe note - could call how_path but you need to give how_path the @how $>
  <%# instance %>
  <%= link_to "Back to all steps list", how_path(@how) %>
</div>

